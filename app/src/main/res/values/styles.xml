<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenButtonStyle" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_size</item>
        <item name="android:layout_marginVertical">@dimen/margin_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">@dimen/button_inset</item>
        <item name="android:insetBottom">@dimen/button_inset</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_const</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_small</item>
        <item name="iconTint">@color/icon_default_tint_const</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_medium</item>
    </style>

    <style name="SettingsTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:drawableTint">@color/icon_setting_tint</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium_small</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/setting_row_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="MainToolbarStyle" parent="ToolbarStyle">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarStyleTextAppearance</item>
        <item name="titleTextColor">@color/text_color</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">6dp</item>
        <item name="navigationIconTint">@color/icon_default_tint</item>
    </style>

    <style name="ToolbarStyleTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/button_font_size</item>
    </style>

    <style name="SearchScreenButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:backgroundTint">@color/button_background_tint</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">@dimen/button_inset</item>
        <item name="android:insetBottom">@dimen/button_inset</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textColor">@color/text_color_inverted</item>
        <item name="android:textSize">@dimen/alert_update_button_text_size</item>
    </style>

    <style name="MediaPlayerAttributeTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_color_secondary_const</item>
        <item name="android:textSize">@dimen/font_size_13</item>
    </style>

    <style name="MediaPlayerAttributeValueStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/font_size_13</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>
</resources>