<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_large">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/ToolbarStyle"
        android:layout_marginBottom="24dp"
        app:navigationIcon="@drawable/ic_24_arrow_back"
        app:title="@string/settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsTextViewStyle"
            android:layout_weight="1"
            android:text="@string/dark_theme" />

        <Switch
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="6dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_share_app"
        style="@style/SettingsTextViewStyle"
        android:text="@string/share_app"
        app:drawableRightCompat="@drawable/ic_24_share" />

    <TextView
        android:id="@+id/text_view_write_to_support"
        style="@style/SettingsTextViewStyle"
        android:text="@string/write_to_support"
        app:drawableRightCompat="@drawable/ic_24_support" />

    <TextView
        android:id="@+id/text_view_terms_of_use"
        style="@style/SettingsTextViewStyle"
        android:text="@string/terms_of_use"
        app:drawableRightCompat="@drawable/ic_24_arrow_forward" />

</LinearLayout>